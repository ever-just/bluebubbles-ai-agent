{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@server": ["server/index"],
            "@server/*": ["server/*"],
            "@windows/*": ["windows/*"],
            "@trays/*": ["trays/*"],
        },
        "outDir": "./dist",
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "*.js", "tsconfig.json"]
}
